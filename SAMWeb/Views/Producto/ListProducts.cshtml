
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<div class="container" style="margin-top:60px">
    <div class="panel panel-primary">
        <div class="panel-heading"><b>Productos Disponibles</b></div>
        <div class="panel-body">
            @foreach (var item in ViewBag.result1)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src=@Url.Content(@item.UrlImagen) alt="Account Manager"/>
                        <div class="caption">
                            <h3>@item.NombreProducto</h3>
                            <p>@item.DescripcionProducto</p>
                            <p><a href=@Url.Content(@item.UrlWebSite) class="btn btn-primary btn-block" role="button">Ingresar</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="panel-footer"></div>
    </div>
</div>

<style>
    .thumbnail img {
        width: 100%;
    }
</style>